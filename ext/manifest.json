{
  "name": "Hearthstone Card Explorer",
  "short_name": "Hearthstone Card Explorer",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "",
  "author": "Chris Schmich <schmch@gmail.com>",
  "homepage_url": "https://github.com/schmich/hearthstone-card-explorer",
  "permissions": [
    "*://*/",
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": ["lib/qwest.min.js", "js/background.js"]
  },
  "icons": {
    "16": "icons/48.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "page_action": {
    "default_icon": "icons/page-action.png"
  },
  "content_security_policy": "script-src 'self'; object-src 'self'"
}
